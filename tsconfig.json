{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}